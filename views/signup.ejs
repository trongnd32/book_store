<head>
    <% include ./layout/header.ejs%>
    <style type="text/css" media="screen,projection">
      @import url("/style/login.css");
    </style>
</head>

<body>
    <div class="login-container">
        <form action="/user/signup" method="post">
            <input class="login-box" type="text" placeholder="Tên đăng nhập" id="username" name="username"/>
            <input class="login-box" type="password" placeholder="Mật khẩu" id="password" name="password"/>
            <input class="login-box" type="text" placeholder="Họ và tên" id="name" name="name"/>
            <input class="login-box" type="email" placeholder="Email" id="email" name="email"/>
            <input class="login-box" type="tel" placeholder="Số điện thoại" id="phonenumber" name="phonenumber"/>
            <input class="login-box" type="text" placeholder="Địa chỉ" id="address" name="address"/>
            <button class="login-btn" type="submit" id="login-btn">Đăng ký</button>
        </form>
    </div>
</body>